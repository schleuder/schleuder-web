.page-header
  %h1= @account

= link_to(edit_account_path(@account), class: 'btn btn-default') do
  %span.glyphicon.glyphicon-wrench
  Change Password

- if @subscribed_lists.present?
  %h3 Lists subscribed to:
  %ul
    - @subscribed_lists.each do |list|
      %li= link_to list, list

- if @admin_lists.present?
  %h3 Lists administrating:
  %ul
    - @admin_lists.each do |list|
      %li= link_to list, list

.pull-right
  = link_to "Delete account", @account, method: :delete, data: { confirm: "Are you really sure? This does NOT unsubscribe you from any list!" }, class: 'btn btn-danger'
.clearfix

