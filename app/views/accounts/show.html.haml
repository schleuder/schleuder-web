.page-header
  %h1= @account

.pull-left
  = link_to(edit_account_path(@account), class: 'btn btn-default') do
    %span.glyphicon.glyphicon-wrench
    Change Password

- if ! @account.superadmin?
  .pull-right
    = link_to "Delete account", delete_account_path(@account), class: 'text-danger'
.clearfix

%br

- if @subscribed_lists.present?
  .col-lg-4
    .panel.panel-info
      .panel-heading Lists subscribed to
      .panel-body
        %ul
          - @subscribed_lists.each do |list|
            %li= link_to list, list

- if @admin_lists.present?
  .col-lg-4
    .panel.panel-info
      .panel-heading Lists administrating
      .panel-body
        %ul
          - @admin_lists.each do |list|
            %li= link_to list, list


.clearfix

- if can? :create, List
  = link_to(new_list_path, class: 'btn btn-success') do
    %span.glyphicon.glyphicon-plus
    New list
