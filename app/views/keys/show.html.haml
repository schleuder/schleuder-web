- @title = "Key #{@key}"

.col.col-lg-6.col-md-8
  %h1
    = @key.fingerprint
    = surround('<', '>') do
      = @key.email
  - if @key.trust_issues.present?
    .text-danger
      Key is
      = succeed('!') do
        = @key.trust_issues
  %p
    Expiry date:
    = @key.expiry || 'None'

  %pre= @key.ascii

- if @key.fingerprint != @list.fingerprint
  .col.col-lg-6.col-md-4
    .pull-right
      = button_to([@list, @key], method: :delete, title: "Delete key from list's keyring", class: 'btn btn-danger') do
        %span.glyphicon.glyphicon-remove
        Delete key

