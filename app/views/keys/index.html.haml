- @title = "Keys"

.col-lg-7
  .panel.panel-info
    .panel-heading= t('.listing_keys')
    .panel-body
      %table.table
        %thead
          %tr
            %th= t(".key_description")
            %th= t(".primary_uid")
            %th= t(".used_by")
        %tbody
          - @keys.each do |key|
            %tr 
              %td
                = link_to key.desc, list_key_path(@list, key), title: "Fingerprint: #{key.fingerprint}"
                - if key.trust_issues.present?
                  .text-danger.glyphicon.glyphicon-warning-sign{title: t(".#{key.trust_issues}")}
              %td= key.email
              %td
                - if sub = Subscription.where(fingerprint: key.fingerprint).first
                  = link_to sub.email, subscription_path(sub)

- if current_account.subscribed_to?(@list) || current_account.superadmin?
  .col-lg-6.col-md-8#upload
    .panel.panel-info
      .panel-heading= t(".upload_keys")
      .panel-body
        = render 'keys/form'
