- @title = "Keys"

.col-lg-7
  .panel.panel-info
    .panel-heading= t('.listing_keys')
    .panel-body
      %table.table
        %thead
          %tr
            %th= t(".key_description")
            %th= t(".used_by")
        %tbody
          - @keys.each do |key|
            %tr 
              %td{style: 'font-family: monospace'}
                = link_to key.desc, list_key_path(@list, key)
                - if key.trust_issues.present?
                  .text-danger.glyphicon.glyphicon-warning-sign{title: t(".#{key.trust_issues}")}
              %td
                = @list.subscriptions.select { |s| s.fingerprint == key.fingerprint }.map do |subscription|
                  - link_to subscription.email, subscription_path(subscription)
                - end.join(', ').html_safe

- if current_account.subscribed_to?(@list) || current_account.superadmin?
  .col-lg-6.col-md-8#upload
    .panel.panel-info
      .panel-heading= t(".upload_keys")
      .panel-body
        = render 'keys/form'
