- @title = 'Subscriptions'

.col-lg-7
  .panel.panel-info
    .panel-heading Subscriptions
    .panel-body
      %table.table
        %thead
          %tr 
            %th email
            %th
        %tbody
          - @admins.each do |subscription|
            = render "subscription_row", subscription: subscription
          - @non_admins.each do |subscription|
            = render "subscription_row", subscription: subscription

.col.col-lg-7
  .pull-right
    = button_to(new_list_subscription_path(@list), method: :get, class: 'btn btn-success') do
      %span.glyphicon.glyphicon-plus
      = t(".new_subscription")
