= simple_form_for(@subscription, html: { class: 'form-horizontal' }, wrapper: :horizontal_form) do |f|
  = f.input :list_id, as: :hidden, input_html: { value: @subscription.list.id }
  - if @subscription.new?
    = f.input :email, required: true
  - else
    = f.input :email, disabled: true
  .mono= f.input :fingerprint, collection: @list.keys.map { |k| [k.to_s, k.fingerprint] }, label: :Key, required: true
  - if can?(:update, @subscription.list)
    = checkbox f, :admin, "May s/he administer this list?"
  = checkbox f, :delivery_enabled, "Receive the emails sent over the list?"
  - if @subscription.persisted?
    = f.button :submit, 'Update', class: 'btn btn-primary'
  - else
    = f.button :submit, 'Subscribe', class: 'btn btn-success'


