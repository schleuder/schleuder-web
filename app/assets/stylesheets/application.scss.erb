@import "bootstrap-sprockets";
@import "bootstrap";

#dev-watermark {
  position: fixed;
  bottom: 0;
  background-color: #fd0;
  width: 100%;
  text-align: center;
  font-size: 0.7em;
  font-weight: bold;
  z-index: 20;
}

body {
  padding: 0 0 2em 0;
  .container:first-child {
    z-index: 5;
  }
}

$maincolor: #4D994D;
#logo {
  color: $maincolor;
  a {
    color: $maincolor;
  }
}

.page-header {
  margin: 0 0 2em;
  #pageheadline {
    font-size: 1.7em;
  }
  ul#listmenu {
    list-style-type: none;
    margin: 1em 0 0;
    padding: 0;
    li {
      display: inline-block;
      margin: 0;
      padding: 0 1em 0 0;
      font-weight: bold;
      a { 
        font-weight: normal;
      }
    }
  }
}

#header {
  margin-bottom: 1em;
}

#submenu {
  margin: -1em 0 2em;
  text-align: right;
}

h1 {
  font-size: 1.5em;
}

.mono {
  font-family: monospace;
}

#navbar .glyphicon {
  color: black;
}

#navbar li#current_user_email a {
  color: black;
  font-weight: bold;
  &:hover {
    background-color: white;
  }
}

.navbar-brand {
  padding-left: 0;
}

.hidden {
  display: none;
}

.large {
  font-size: 1.2em;
}

.listing {
  td:first-child {
    text-align: right;
  }
  td {
    text-align: left;
    padding: 0.2em 0.5em;
  }
}

.black {
  color: black;
}

#keyupload {
  input[type=file] {
    border: solid thin #ccc;
    padding: 0.2em 0.4em;
    display: inline-block;
  }

  textarea#ascii {
    width: 100%;
    min-height: 10em;
  }

  #formtabs {
    min-height: 20em;
    position: relative;
    width: 100%;
    & > div {
      display: inline;
      a {
        margin-left: -1px;
        position: relative;
        left: 1px;
        text-decoration: none;
        color: black;
        background: white;
        display: block;
        float: left;
        padding: 5px 10px;
        border: 1px solid #ccc;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
        z-index: 2;
      }
      .tabcontent {
        background: white;
        position: absolute;
        z-index: -2;
        left: 0;
        top: 30px;
        bottom: 0;
        right: 0;
        padding: 20px;
        border: 1px solid #ccc;
      }
    }
    & > div:not(:target) {
      a {
        background: -moz-linear-gradient(top, white, #eee);
      }
    }
    & > div:target {
      a {
        border-bottom: 1px solid white;
        background: white;
      }
      .tabcontent {
        z-index: 1;
      }
    }
  }
}

.admin-star-colour {
  color: #F5D327;
}
